####
# This Dockerfile is used in order to build a container that runs the Quarkus application in native (no JVM) mode.
#
# Before building the container image run:
#
# ./mvnw package -Dnative
#
# Then, build the image with:
#
# docker build -f src/main/docker/Dockerfile.native -t quarkus/efac-rest-microservice .
#
# Then run the container using:
#
# docker run -i --rm -p 8080:8080 quarkus/efac-rest-microservice
#
# Para configurar la URL del endpoint externo desde variable de entorno:
# docker run -e EXTERNAL_API_MP_REST_URL="https://midominio/api" -i --rm -p 8080:8080 quarkus/efac-rest-microservice
#
###
FROM registry.access.redhat.com/ubi8/ubi-minimal:8.9
WORKDIR /work/
RUN chown 1001 /work \
    && chmod "g+rwX" /work \
    && chown 1001:root /work
COPY --chown=1001:root target/*-runner /work/application

EXPOSE 8080
USER 1001

ENTRYPOINT ["./application", "-Dquarkus.http.host=0.0.0.0"]
